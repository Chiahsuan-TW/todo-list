<form action="/todos/{{todo._id}}?_method=put" method="POST" style="display: inline;">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <span><input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}}></span>
            </div> 
        </div>
        <input type="text" class="form-control" placeholder="name" name="name" value="{{todo.name}}">
        <div class="input-group-append">
            <button class="btn btn-success"  type="submit">Save</button>
        </div>
    </div>
</form>